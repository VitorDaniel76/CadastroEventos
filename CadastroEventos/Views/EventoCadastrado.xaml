<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroEventos.Views.EventoCadastrado"
             Title="EventoCadastrado">
    <VerticalStackLayout Padding="10" VerticalOptions="Center" Spacing="10">
        <Label Text="{Binding NomeEvento}"
               FontSize="30"
               HorizontalOptions="Center"/>
        <Border Padding="10"
                Stroke="Black"
                StrokeShape="RoundRectangle 10"
                Background="Black">
            <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                

                <Grid RowDefinitions="*, *" ColumnDefinitions="auto, auto" ColumnSpacing="50">
                    <Label Grid.Column="0"
                           Text="Data Inicio:"/>
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Text="{Binding DataInicio, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                    
                    <Label Grid.Column="1"
                           Text="Data Termino:"/>
                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="{Binding DataTermino, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                </Grid>

                <Border Stroke="Black">
                    <VerticalStackLayout>
                        <Label HorizontalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="local: "/>
                                    <Span Text="{Binding Local}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label HorizontalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="NÃºmero de Participantes: "/>
                                    <Span Text="{Binding NumeroParticipantes}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label HorizontalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Valor Total: "/>
                                    <Span Text="{Binding ValorTotal, StringFormat='{}{0:c}'}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>

                </Border>
                    
            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>